{
  "name": "novomatic-produktapp",
  "version": "1.0.0",
  "description": "Progressive webapp for browsing novomatic products.",
  "main": "dist/main.js",
  "repository": "git@bitbucket.org:instantdesign/novomatic-produktapp.git",
  "author": "Daniel Bammer <d.bammer@instant.at>",
  "private": true,
  "scripts": {
    "build": "webpack --mode=production --config=web/themes/progress/webpack.config.js",
    "analyze": "webpack --mode=production --analyze --config=web/themes/progress/webpack.config.js",
    "dev": "webpack --mode=development --watch --config=web/themes/progress/webpack.config.js"
  },
  "dependencies": {
    "bootstrap": "~4.4.1",
    "core-js": "3",
    "jquery": "^3.5.0",
    "lodash": "^4.17.15",
    "popper.js": "^1.16.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.7",
    "@babel/core": "^7.7.7",
    "@babel/plugin-transform-runtime": "^7.7.6",
    "@babel/preset-env": "^7.7.7",
    "babel-loader": "^8.0.6",
    "babel-plugin-lodash": "^3.3.4",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^5.1.1",
    "css-loader": "^3.0.0",
    "eslint": "^6.8.0",
    "file-loader": "^5.0.2",
    "imagemin-mozjpeg": "^8.0.0",
    "imagemin-pngquant": "^8.0.0",
    "imagemin-webpack-plugin": "^2.4.2",
